<%- include('../partials/header') %>
<h1 class="mb-4">Edit user</h1>
<form action="/logins/<%= login.id %>?_method=PUT" method="POST" class="card p-4" >
    <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" id="email" name="email" class="form-control" value="<%= login.email %>" required />
    </div>
    <div class="mb-3">
    <label for="password" class="form-label">password</label>
    <input type="password" id="password" name="password" class="form-control" value="<%= login.password %>" required />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/logins" class="btn btn-secondary">Cancel</a>
</form>

<%- include('../partials/footer') %>


