<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panda Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="../css/movie.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <a class="navbar-brand d-flex align-items-center" href="#">
                        <span class="navbar-logo-text">PANDA</span>
                        <img src="./image/image copy 5.png" alt="logo" class="logo me-2">
                    </a>            
                    <!-- <img src="/html/image/image copy 5.png" alt="logo" > -->
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/"><i class="fa-regular fa-house"></i> Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/usermovie"><i class="fa-solid fa-film"></i> Movie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#"><i class="fa-regular fa-cart-shopping"></i> Download</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/userlogin"><i class="fa-solid fa-address-card"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#"><i class="fa-solid fa-earth-americas"></i> EN</a>
                    </li>
                </ul> 
            </div>
        </div>
    </nav>

    <div class="container ">
        <h3 class="mv1">Trending Movies</h3>
        <div class="row">
            <% movies.forEach(function(movie) { %>
                <div class="col-lg-3 col-md-6 col-sm-12" >
                    <div class="card" style="width: 100%;"">
                        <img src="<%= movie.image %>" alt="<%= movie.title %>" class="card-img-top">
                        <div class="card-body">
                            <h4 class="card-title"><%= movie.title %></h4>
                            <p class="card-text"><%= movie.description %></p>
                            <a href="/userdetail/<%= movie.id %>" class="btn btn-primary">Watch Now</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
