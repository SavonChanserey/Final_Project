<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panda Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="../css/movie.css">
</head>
<body>
    <div class="bg-img">
        <img src="./image/image copy 9.png" alt="Background 1" class="bg-image bg-1">
        <img src="./image/image copy 4.png" alt="Background 2" class="bg-image bg-2">
        <img src="./image/image copy 2.png" alt="Background 3" class="bg-image bg-3">
        <img src="./image/image copy 6.png" alt="Background 4" class="bg-image bg-4">
    </div>
    <%- include('../partials/navbar') %>
    <div class="container mt-5">
        <div class="heading">
            <h3 class="heading" id="pic"><strong>Trending Movie</strong></h3>
        </div>
        <div class="row">
            <% movies.forEach(function(movie) { %>
                <div class="col-lg-3 col-md-6 col-sm-12" >
                    <div class="card" style="width: 100%;"">
                        <img src="<%= movie.image %>" alt="<%= movie.title %>" class="card-img-top">
                        <div class="card-body">
                            <h4 class="card-title"><%= movie.title %></h4>
                            <p class="card-text"><%= movie.description %></p>
                            <a href="/userdetail/<%= movie.id %>" class="btn btn-primary">Watch Now</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
