<!DOCTYPE html>
<html lang="en">
    <head>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous"/>
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet"/>
        <link rel="stylesheet" href="../css/detail.css" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <body>
        <%- include('../partials/navbar') %>
        <div class="container-fluid">
            <div class="row">
                <% if (movies.length > 0) { %>
                    <% const movie = movies[0]; %> <!-- Get the specific movie -->
                    <div class="col-md-7 col-12 left-side">
                        <img src="<%= movie.image %>" alt="<%= movie.title %>" class="img-fluid">
                    </div>
                    <div class="col-md-5 col-12 right-side">
                        <h3><%= movie.title %></h3>
                        <div class="col-12">
                            <span class="text-item">China</span>
                            <span class="text-item">Completed</span>
                            <span class="text-item">TVSeries</span>
                        </div>
                        <div class="button-group">
                            <button type="button" class="btn btn-grey text-light btn-icon">
                                <i class="fa-regular fa-heart"></i>
                                <span>Favorite</span>
                            </button>
                            <button type="button" class="btn btn-grey text-light btn-icon">
                                <i class="fa-solid fa-share-nodes"></i>
                                Share
                            </button>
                            <button type="button" class="btn btn-grey text-light btn-icon">
                                <i class="fa-solid fa-cloud-arrow-down"></i>
                                <span>Download</span>
                            </button>
                            <button class="btn btn-grey text-light btn-icon">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Report</span>
                            </button>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary btn-custom dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                                Description
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <li><span class="dropdown-item-text"><%= movie.description %></span></li>
                            </ul>
                        </div>
                        <div class="episode">
                            <h3>Episodes</h3>
                        </div>
                        <div class="episodes">
                            <% episodes.forEach(function(episode) { %>
                                <button class="btn btn-secondary btn-custom text-light btn-icon">
                                    <a href="<%= episode.link %>" class="text-light text-decoration-none">
                                        <span><%= episode.episode %></span>
                                        <i class="fa-solid fa-closed-captioning"></i>
                                    </a>
                                </button>
                            <% }); %>
                        </div>
                    </div>
                <% } else { %>
                    <p>Movie not found.</p>
                <% } %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
