      <div class="row">
          <div class="col-md-7 col-12 left-side">
            <% movies.forEach(function(movie) { %>
              <% let relatedEpisodes = episodes.filter(episode => episode.movie_id === movie.id);  %>
                  <img src="<%=movie.image%>" alt="first movie">
            </div>
            <div class="col-md-5 col-12 right-side">
                <h3><%= movie.title%></h3>
                <div class="col-12">
                  <span class="text-item">South Korea</span>
                  <span class="text-item">Completed</span>
                  <span class="text-item">TVSeries</span>
                </div>
                <% }); %>
              <div class="button-group">
                <button type="button" class="btn btn-grey text-light btn-icon">
                  <i class="fa-regular fa-heart"></i>
                  <span>Favorite</span>
                </button>
                <button type="button" class="btn btn-grey text-light btn-icon">
                  <i class="fa-solid fa-share-nodes"></i>
                  Share
                </button>
                <button type="button" class="btn btn-grey text-light btn-icon">
                  <i class="fa-solid fa-cloud-arrow-down"></i>
                  <span>Download</span>
                </button>
                <button class="btn btn-grey text-light btn-icon">
                  <i class="fas fa-exclamation-circle"></i>
                  <span>Report</span>
                </button>
              </div>

              <div class="dropdown">
                <button class="btn btn-secondary btn-custom dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                  Description
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                  <% movies.forEach(function(movie) { %>
                    <% if (episodes.some(episode => episode.movie_id === movie.id)) { %>
                      <li><span class="dropdown-item-text"><%= movie.description %></span></li>
                    <% } %>
                    <% }); %>
                </ul>
              </div>
              <div class="episode">
                <h3>Episodes</h3>
              </div>
              <div class="episodes">
                <% episodes.forEach(function(episode) { %>
                  <% let relatedMovies = movies.filter(movie => movie.id === episode.movie_id);  %>
                    <button class="btn btn-secondary btn-custom text-light btn-icon">
                      <a href="<%= episode.link %>" class="text-light text-decoration-none">
                        <span><%= episode.episode %> </span>
                      </a>
                      <i class="fa-solid fa-closed-captioning"></i>
                    </button>
                <% }); %>
              </div>
          </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
